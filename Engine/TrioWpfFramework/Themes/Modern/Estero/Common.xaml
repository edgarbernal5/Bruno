<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:options="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                    xmlns:windows="clr-namespace:TrioWpfFramework.Windows">

    <windows:InvertBooleanConverter x:Key="InvertBooleanConverter" />
    <windows:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />

    <Geometry x:Key="Modern.UpArrow" options:Freeze="True">M0,1 L1,1 0.5,0Z</Geometry>
    <Geometry x:Key="Modern.LeftArrow" options:Freeze="True">M0,0.5 L1,1 1,0Z</Geometry>
    <Geometry x:Key="Modern.RightArrow" options:Freeze="True">M0,0 L1,0.5 0,1Z</Geometry>
    <Geometry x:Key="Modern.DownArrow" options:Freeze="True">M0,0 L1,0 0.5,1Z</Geometry>
    <Geometry x:Key="Modern.Cross" options:Freeze="True">M0,0 L1,1 M0,1 L1,0</Geometry>

</ResourceDictionary>
