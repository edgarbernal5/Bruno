                                    CornerRadius="7"
                                    SnapsToDevicePixels="True" />-->
                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="32" />
                                    <ColumnDefinition Width="36" />
                                    <ColumnDefinition Width="32" />
